@page
@model MegadeskRazorPages.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div id="scriptures-list" class="col-lg-12 order-md-1">
    <h6>Welcome to your Megadesk!</h6>
    <form method="GET">
        <div class="row">
            <div class="col-md-3 mb-3">
                <input type="text" class="form-control" asp-for="SearchString" placeholder="Search by name">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <button style="margin-top: 2%" class="btn btn-info" type="submit"><i class="fas fa-search"></i> Search</button>
                <a style="margin-top: 2%; color: white" class="btn btn-warning" asp-page="Index"><i class="fas fa-undo"></i> Clear filter</a>
                <a style="margin-top: 2%; color: white" class="btn btn-primary" asp-page="Create"><i class="fas fa-plus"></i> Create</a>
            </div>
        </div>
    </form>
</div>

<div class="col-lg-12">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Index"
                       asp-route-SearchString="@Model.SearchString"
                       asp-route-sortOrder="@Model.NameSort">
                        @Html.DisplayNameFor(model => model.Quote[0].CustomerName)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].DeskDepth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].DeskDrawers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].DeskWidth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].RushDays)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quote[0].DeskMaterialOptions)
                </th>
                <th>
                    <a asp-page="./Index"
                       asp-route-SearchString="@Model.SearchString"
                       asp-route-sortOrder="@Model.DateSort">
                        @Html.DisplayNameFor(model => model.Quote[0].Date)
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Quote)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeskDepth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeskDrawers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeskWidth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RushDays)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeskMaterialOptions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                        <a asp-page="./Details" asp-route-id="@item.ID"><i class="fas fa-eye"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>